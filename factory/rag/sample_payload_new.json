{
	"ingestion": {
		"source_type": "both",
		"sharepoint": {
			"site_url": "https://yourtenant.sharepoint.com/sites/yoursite",
			"tenant_id": "your-tenant-id",
			"client_id": "your-client-id",
			"client_secret": "your-client-secret",
			"folder_path": "Documents",
			"recursive": true
		},
		"chunking": {
			"method": "hybrid",
			"chunk_size": 512,
			"overlap": 50
		},
		"metadata": {
			"fields": [
				{
					"name": "title",
					"type": "string",
					"description": "Document title",
					"auto_extract": true,
					"default_value": null,
					"required": false
				},
				{
					"name": "page",
					"type": "integer",
					"description": "Page number",
					"auto_extract": true,
					"default_value": null,
					"required": false
				},
				{
					"name": "content",
					"type": "string",
					"description": "Document content",
					"auto_extract": true,
					"default_value": null,
					"required": true
				},
				{
					"name": "content_vector",
					"type": "list",
					"description": "Content vector embeddings",
					"auto_extract": false,
					"default_value": null,
					"required": false
				},
				{
					"name": "document_type",
					"type": "string",
					"description": "Type of document",
					"auto_extract": false,
					"default_value": "general",
					"required": false
				}
			]
		},
		"embeddings": {
			"model": "text-embedding-3-small"
		}
	},
	"vector_db": {
		"type": "azure_search",
		"index_name": "rag-index",
		"distance_metric": "cosine"
	},
	"query": {
		"retrieval_type": "semantic",
		"top_k": 5,
		"filters": { "file_type": "pdf" },
		"reranker": true,
		"context_window": 2048
	}
}
