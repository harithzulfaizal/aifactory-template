{
	"ingestion": {
		"source_type": "upload",
		"file_types": ["pdf", "docx", "txt", "png", "jpeg"],
		"sharepoint": {
			"site_url": "https://yourtenant.sharepoint.com/sites/yoursite",
			"tenant_id": "your-tenant-id",
			"client_id": "your-client-id",
			"client_secret": "your-client-secret",
			"folder_path": "Documents",
			"recursive": true
		},
		"chunking": {
			"method": "hybrid",
			"chunk_size": 512,
			"overlap": 50
		},
		"metadata": {
			"fields": [
				{
					"name": "title",
					"type": "string",
					"description": "Document title",
					"auto_extract": true,
					"default_value": null,
					"required": false
				},
				{
					"name": "page",
					"type": "integer",
					"description": "Page number",
					"auto_extract": true,
					"default_value": null,
					"required": false
				},
				{
					"name": "content",
					"type": "string",
					"description": "Document content",
					"auto_extract": true,
					"default_value": null,
					"required": true
				},
				{
					"name": "content_vector",
					"type": "list",
					"description": "Content vector embeddings",
					"auto_extract": false,
					"default_value": null,
					"required": false
				},
				{
					"name": "document_type",
					"type": "string",
					"description": "Type of document",
					"auto_extract": false,
					"default_value": "general",
					"required": false
				}
			]
		},
		"embeddings": {
			"model": "text-embedding-3-small",
			"dimension": 1536,
			"azure_endpoint": "https://your-resource.openai.azure.com/",
			"api_version": "2024-02-15-preview"
		}
	},
	"vector_db": {
		"type": "azure_search",
		"index_name": "rag-index",
		"distance_metric": "cosine",
		"dynamic_fields": true,
		"azure_search": {
			"endpoint": "https://your-search-service.search.windows.net",
			"api_key": "your-search-api-key",
			"api_version": "2024-07-01",
			"semantic_configuration": "default-semantic-config"
		}
	},
	"query": {
		"retrieval_type": "semantic",
		"top_k": 5,
		"filters": { "file_type": "pdf" },
		"reranker": "bm25",
		"prompt_template": "Based on the following context, please answer the question accurately and concisely. If the context doesn't contain enough information, please say so.\n\nContext: {context}\n\nQuestion: {question}\n\nAnswer:",
		"context_window": 2048,
		"answer_style": "detailed"
	},
	"extraction": {
		"schema": [
			{ "field": "invoice_number", "type": "string" },
			{ "field": "amount", "type": "float" }
		],
		"granularity": "document",
		"output_format": "json"
	},
	"orchestration": {
		"llm_provider": "azure_openai",
		"llm_model": "gpt-4",
		"temperature": 0.2,
		"max_tokens": 1024,
		"api_key": "AZURE_OPENAI_API_KEY"
	}
}
