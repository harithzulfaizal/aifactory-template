{
	"ingestion": {
		"source_type": "upload",
		"chunking": {
			"method": "fixed",
			"chunk_size": 512,
			"overlap": 50
		},
		"metadata": {
			"fields": [
				{
					"name": "title",
					"type": "string",
					"description": "Document title",
					"auto_extract": false,
					"default_value": null,
					"required": true
				},
				{
					"name": "page",
					"type": "integer",
					"description": "Page number",
					"auto_extract": false,
					"default_value": null,
					"required": false
				},
				{
					"name": "content",
					"type": "string",
					"description": "Document content",
					"auto_extract": false,
					"default_value": null,
					"required": true
				},
				{
					"name": "content_vector",
					"type": "list",
					"description": "Content vector embeddings",
					"auto_extract": false,
					"default_value": null,
					"required": true
				}
			]
		},
		"embeddings": {
			"model": "text-embedding-ada-002"
		}
	},
	"vector_db": {
		"type": "azure_search",
		"index_name": "my_index",
		"distance_metric": "cosine"
	},
	"query": {
		"retrieval_type": "semantic",
		"top_k": 5,
		"filters": { "file_type": "pdf" },
		"reranker": false,
		"context_window": 2048
	}
}
