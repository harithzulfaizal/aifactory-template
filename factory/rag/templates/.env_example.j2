# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=your_azure_search_endpoint
AZURE_SEARCH_API_KEY=your_azure_search_api_key
AZURE_SEARCH_API_VERSION=2024-07-01

# Optional: Semantic Search Configuration
AZURE_SEARCH_SEMANTIC_CONFIGURATION=default-semantic-config

{% if config.ingestion.sharepoint %}
# SharePoint Configuration
SHAREPOINT_SITE_URL={{ config.ingestion.sharepoint.site_url }}
SHAREPOINT_TENANT_ID={{ config.ingestion.sharepoint.tenant_id }}
SHAREPOINT_CLIENT_ID={{ config.ingestion.sharepoint.client_id }}
SHAREPOINT_CLIENT_SECRET=your_sharepoint_client_secret
SHAREPOINT_FOLDER_PATH={{ config.ingestion.sharepoint.folder_path or '' }}
{% endif %}
